{
  "name": "complaint-management-system",
  "version": "1.0.0",
  "description": "Backend system for user authentication, complaint handling, and onboarding reminders",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d src/config/database.js",
    "migration:run": "npm run typeorm -- migration:run -d src/config/database.js",
    "migration:revert": "npm run typeorm -- migration:revert -d src/config/database.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "typeorm": "^0.3.17",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "node-cron": "^3.0.3",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}